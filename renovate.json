{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "React & Next.js",
      "matchPackagePatterns": ["^react", "^@types/react"],
      "matchPackageNames": ["next", "eslint-config-next"]
    },
    {
      "groupName": "Radix UI",
      "matchPackagePatterns": ["^@radix-ui"]
    },
    {
      "groupName": "Styling utilities",
      "matchPackageNames": ["clsx", "class-variance-authority", "tailwind-merge"]
    },
    {
      "groupName": "Directus",
      "matchPackagePatterns": ["^@directus"]
    },
    {
      "groupName": "Testing",
      "matchPackagePatterns": ["playwright", "^@playwright"]
    },
    {
      "groupName": "Rehype & Remark plugins",
      "matchPackagePatterns": ["^rehype", "^remark"]
    },
    {
      "description": "Ignore icon libraries - update manually",
      "matchPackageNames": ["lucide-react", "react-icons"],
      "enabled": false
    }
  ],
  "schedule": ["before 5am on monday"],
  "timezone": "Europe/Helsinki"
}
